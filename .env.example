DATABRICKS_WAREHOUSE_ID=your_warehouse_id_here

# Server configuration (OPTIONAL - for development)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False

# Logging (OPTIONAL)
LOG_LEVEL=INFO
